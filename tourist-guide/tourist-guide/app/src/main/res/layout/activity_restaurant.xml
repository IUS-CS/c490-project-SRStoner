<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9fcadd"
    tools:context="com.samst.tourguide.RestaurantActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="770dp"
        android:layout_marginTop="999dp"
        android:layout_marginEnd="360dp"
        app:layout_constraintBottom_toTopOf="@+id/listview_1"
        app:layout_constraintEnd_toStartOf="@+id/listview_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/french_food" />

    <ListView
        android:id="@+id/listview_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#9fcadd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>