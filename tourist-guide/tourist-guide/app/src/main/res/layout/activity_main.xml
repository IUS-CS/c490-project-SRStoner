<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#9fcadd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.samst.tourguide.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="128dp"
        android:fontFamily="@font/audiowide"
        android:text="Paris Guide"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#010203"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:background="@drawable/btn_1"
        android:text="Login"
        android:textColor="#010203"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/restaurant_button_view"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="128dp"
        android:background="@drawable/btn_1"
        android:fontFamily="@font/audiowide"
        android:text="@string/restaurant_label"
        android:textAlignment="center"
        android:textColor="#010203"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/attractions_button_view"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="128dp"
        android:background="@drawable/btn_2"
        android:fontFamily="@font/audiowide"
        android:text="@string/attractions_label"
        android:textAlignment="center"
        android:textColor="#010203"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_button_view" />

    <Button
        android:id="@+id/map_button_view"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="128dp"
        android:background="@drawable/btn_3"
        android:fontFamily="@font/audiowide"
        android:text="@string/map_label"
        android:textAlignment="center"
        android:textColor="#010203"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attractions_button_view" />

    <Button
        android:id="@+id/about_button_view"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="128dp"
        android:background="@drawable/btn_4"
        android:fontFamily="@font/audiowide"
        android:text="@string/about_label"
        android:textAlignment="center"
        android:textColor="#010203"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_button_view" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="175dp"
        android:layout_height="179dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_button_view"
        app:srcCompat="@drawable/france_flag" />


</androidx.constraintlayout.widget.ConstraintLayout>